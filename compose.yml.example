services:
  rust-api:
    build:
      context: .
      dockerfile: Dockerfile
    restart: unless-stopped
    networks:
      - caddy_net
    labels:
      - caddy=your-subdomain.yourdomain.com
      - caddy.reverse_proxy={{upstreams 3003}}
      - caddy.encode=zstd gzip
    expose:
      - 3003
    env_file:
      - .env

networks:
  caddy_net:
    external: true
